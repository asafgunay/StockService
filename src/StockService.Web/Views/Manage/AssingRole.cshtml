@model StockService.Web.ViewModels.Manage.AssignRoleViewModel

@{
    ViewData["Title"] = "AssignRole";
}

<h1>Yetki Ata</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" asp-items="Model.RoleList" class="form-control"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <input asp-for="UserId" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Yeni Yetki Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

